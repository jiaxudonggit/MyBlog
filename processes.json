{
    "apps": [
      {
        "name": "blog",
        "cwd": "/app",
        "script": "yarn start",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "./logs/error.log",
        "out_file": "./logs/access.log",
        "pid_file": "./pid/blog.pid",
        "min_uptime": "200s",
        "max_restarts": 10,
        "max_memory_restart": "1024M",
        "cron_restart": "1 0 * * *",
        "watch": true,
        "merge_logs": true,
        "exec_mode"  : "fork"
      }
    ]
  }
